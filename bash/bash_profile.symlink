if [ -f ~/.alias ]; then
  source ~/.alias
fi

# -f is true if exists and is a regular file (not dir or symlink)
if [ -f ~/.prompt ]; then
  source ~/.prompt
fi

if [ -f ~/.functions ]; then
  source ~/.functions
fi

# Load the default .profile
[[ -s "$HOME/.profile" ]] && source "$HOME/.profile"

# Load Rbenv automatically
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# add devops tools 
#Adding opt bin and dev bin to PATH for fun
export PATH=$PATH:~/dev/devops-tools
