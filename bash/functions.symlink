#!/bin/bash

# Create a new directory and enter it
function mkd() {
	mkdir -p "$@" && cd "$_";
}

function settitle() {
  echo -e "\033[32m$1"
  tput sgr0;
}

# create a local branch and push it upstream
function upstream_branch() {
	git checkout -b $1 && git push -u origin $1
}

# create a local branch off a remote one
function remote_branch() {
	git fetch
	git branch --track $1 origin/$1
}
